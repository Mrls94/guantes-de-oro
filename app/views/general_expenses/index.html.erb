<p id="notice"><%= notice %></p>

<h1>Gastos Generales</h1>

<div class="box">
  <div class="box-body table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Usuario</th>
          <th>Valor</th>
          <th>Descripcion</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @general_expenses.each do |general_expense| %>
          <tr>
            <td><%= general_expense.user.email %></td>
            <td><%= ActiveSupport::NumberHelper::number_to_delimited(general_expense.value) %></td>
            <td><%= general_expense.description %></td>
            <td><%= link_to 'Show', general_expense %></td>
          </tr>
        <% end %>
        <%= will_paginate @daily_movements, previous_label: 'Anterior', next_label: 'Siguiente' %>
      </tbody>
    </table>

    <br>

    <%#= link_to 'New General Expense', new_general_expense_path %>

  </div>
</div>