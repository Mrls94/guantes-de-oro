<!DOCTYPE html>
<html>
  <head>
    <title>GuantesDeOroTestLogin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <% if current_user.session %>
        <aside class="main-sidebar control-sidebar control-sidebar-dark">
          <section class="sidebar">
            <li>
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
            </li>

            <div class="user-panel">
              <div class="pull-left info">
                  <%= current_user.email %> 
              </div>
            </div>

            <ul class="sidebar-menu" data-widget="tree">
              <li class="header">Opciones</li>
              <li class="active"><a href="#"><i class="fa fa-link"></i> <span>Movimiento del d√≠a</span></a></li>
              <li><a href="#"><i class="fa fa-link"></i> <span>Gasto general</span></a></li>
              <li><a href="#"><i class="fa fa-link"></i> <span>Administrar usuarios</span></a></li>
              <li><a href="#"><i class="fa fa-link"></i> <span>Monedas</span></a></li>
            </ul>
          </section>
        </aside>
        <div class="content">
          <%= yield %>  
        </div>
      <% else %>
        <li>
          <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
        </li>
        <%= yield %>
      <% end %>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
