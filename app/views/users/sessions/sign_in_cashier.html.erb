<div class="box box-solid box-primary login-box">
  <div class="box-header ">
      <h3 class="box-title box-center">
        Escoge la caja en donde estas ubicado
      </h3>
  </div>
  <div class="box-body login-box-body">
    <%= form_for(@session, url: users_session_cashier_path) do |f| %>

      <div class="form-group">
        <%= f.collection_select(:cashier_id, current_user.cashiers.no_session, :id, :place, {:include_blank => current_user.admin?}, {class: "form-control select-cashier"}) %>
      </div>
      <%# if devise_mapping.rememberable? -%>
        <div class="field">
          <%#= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
        </div>
      <%# end -%>

      <div class="actions">
        <%= f.submit "Seleccionar", {class: "btn btn-primary button-cashier"} %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
    <div class="sign-out-button">
      <%= link_to('Cerrar Session', destroy_user_session_path, method: :delete) %>
    </div>
  </div>
</div>
