<header class='main-header'>
  <div class="logo-lg">
    Guantes de <b>Oro</b>
  </div>

  <nav class="navbar navbar-static-top navbar-top">
    <div class="header-content-nav pull-right info">
      <%= current_user.email %>
      <% if current_user.session.cashier %>
        <b><%= current_user.session.cashier.place %></b>
        <div class="sign-out-button-header">
          <%= link_to('Cerrar Session', confirm_cashier_status_path, method: :get) %>
        </div>
      <% else %>
        <div class="sign-out-button-header">
          <%= link_to('Cerrar Session', destroy_user_session_path, method: :delete) %>
        </div>
      <% end %>
    </div>
  </nav>
</header>